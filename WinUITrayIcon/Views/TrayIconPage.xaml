<Page
    x:Class="WinUITrayIcon.Views.TrayIconPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.ContextFlyout>
        <MenuFlyout ShouldConstrainToRootBounds="False">

            <ToggleMenuFlyoutItem Text="Toggle MenuFlyoutItem 1">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xEECA;" />
                </MenuFlyoutItem.Icon>
            </ToggleMenuFlyoutItem>
            <ToggleMenuFlyoutItem Text="Toggle MenuFlyoutItem 2">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xEECA;" />
                </MenuFlyoutItem.Icon>
            </ToggleMenuFlyoutItem>

            <MenuFlyoutSeparator />

            <MenuFlyoutItem Text="MenuFlyoutItem 1">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xEDE3;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem Text="MenuFlyoutItem 2">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xEDE3;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>

        </MenuFlyout>
    </Page.ContextFlyout>

</Page>
